{% extends 'base.html.twig' %}

{% block title %}Profil Detail{% endblock %}


{% block body %}

    <div id="profile-container">
        <div class="jumbotron jumbotron-fluid bgcolor-container">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 text-capitalize">
                        <img class="rounded-circle img-responsive" width="150px" alt="300x200" src="{{ displayImage(profilUser) }}" style="border: 7px solid white;">
                    </div>
                    <div class="col-sm-9 text-capitalize ">
                        <h3>{{ profilUser.name }}</h3>
                        <p>{{ displayStars(profilUser) }}</p>
                        <p>{{ displayLocalisation(profilUser) }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            {% include 'common/flash-messages.html.twig' %}

            <div class="row">
                <!-- right menu -->
                <div class="col-xs-6 col-sm-3 sidebar-offcanvas order-sm-2" id="sidebar">
                    <div class="tab-pane fade show active pb-2" id="nav-homex" role="tabpanel" aria-labelledby="nav-home-tab">
                        <!--left col-->
                        <ul class="list-group pb-3">
                            <li class="list-group-item text-left bg-primary text-white"><strong>Contacter par message</strong></li>
                            <li class="list-group-item text-left">
                                <span class="pull-left">
                                    Envoyer un message
                                </span>
                            </li>
                        </ul>
                    </div>

                    <div class="list-group pb-5">
                        <ul class="list-group">
                            <li class="list-group-item text-left list-group-item bg-primary text-white"><span class="pull-left"><strong>Donner un avis</strong></span></li>
                            <li class="list-group-item text-center">
                                <a class="" data-toggle="modal" data-target="#modalVote" href="javascript:void(0);">
                                    <i class="fa fa-pen fa-2x"></i>
                                </a>
                                {% include 'partials/profil/modal-vote.html.twig' with {'user': profilUser} %}
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- left menu -->
                <div class="col-xs-6 col-sm-9 order-sm-1">
                    <div class="tab-content" id="">
                        <div class="tab-pane fade show active pb-4" role="tabpanel" aria-labelledby="nav-home-tab">
                            <!--left col-->
                            <ul class="list-group">
                                <li class="list-group-item text-left text-white police-oldenburg bg-primary">
                                    <span class=""><strong>PRESENTATION DE LA COMPETENCE OU OBJECTIF</strong></span>
                                </li>
                                <li class="list-group-item text-left">
                                    {{ currentAds.getName() }}
                                </li>
                                <li class="list-group-item text-left">
                                    {{ currentAds.getDescription() }}
                                </li>
                                <li class="list-group-item text-left">
                                    idUser (currentAds.getUser().getId()) => {{ currentAds.getUser().getId() }}
                                </li>
                                <li class="list-group-item text-left">
                                    name (currentAds.getUser().getName()) => {{ currentAds.getName() }}
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="tab-content" id="">
                        <div class="tab-pane fade show active pb-4" role="tabpanel" aria-labelledby="nav-home-tab">
                            <!--left col-->
                            <ul class="list-group">
                                <li class="list-group-item text-left text-white police-oldenburg  bg-primary">
                                    <span class=""><strong>LISTE DES OBJECTIFS PERSONNELS</strong></span>
                                </li>
                                <li class="list-group-item text-left">
                                    ddddddd
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


                <!--/tab-content-->
            </div>
            <!--/col-9-->
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
        {{ parent() }}
        <link href="{{ absolute_url('/homepage-child/css/profile.css') }}" rel="stylesheet">
{% endblock %}