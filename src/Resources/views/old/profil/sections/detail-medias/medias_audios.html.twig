{% for musicsArrays in mediasList %}
    {% set prevAds = "" %}
    {% for music in musicsArrays %}
        {%  if loop.index == 1 or prevAds != music.getMedias().getAds().getName() %}
            <div class="pt-5 pl-4 text-center font-weight-bold">{{ music.getMedias().getAds().getName() }}</div>
        {% endif %}

        <div class="d-inline-flex m-2">
            <div class="justify-content-center">
                <div class="">
                    <div class="d-flexx text-center align-content-center">
                        {{ music.getName() }}
                        {{ displayBtnEdit({
                            'idModal':'modal-btn-add-music',
                            'titleModal': 'Ajout d\'un fichier audio',
                            'titleLink':'Ajouter une music',
                            'icon': 'fa-plus-square',
                            'onclick': 'loadMediaMusic(\''~path('ajax.form.music')~'\',\'#content-ajax-modal-btn-add-music\','~profilUser.getId()~');' }
                        )}}

                        {{ displayBtnEdit({
                            'idModal':'modal-btn-edit-music-'~music.getId(),
                            'titleModal': 'Modification de fichier son',
                            'titleLink':'Editer le fichier audio?',
                            'onclick': 'loadMediaMusic(\''~path('ajax.form.music')~'\',\'#content-ajax-modal-btn-edit-music-'~music.getId()~'\', \''~profilUser.getId()~'\', \''~music.getId()~'\');' }
                        )}}

                        {{ displayBtnDelete(
                            {
                                'idModal'      : 'modal-btn-delete-music-'~music.getId(),
                                'linkDelete'   :  path('profil.media.delete',{ 'idMedia':music.getId(), 'typeMedia':'music', 'token' : csrf_token('delete-item') }),
                                'titleModal'   : 'Attention, suppression imminente',
                                'contentModal' : 'Confirmer la suppression de la photo?'
                            }
                        )}}
                    </div>
                    <div class="d-flex">

                        <audio controls class="p-1">
                            <i class="fa fa-pencil-alt fa-1x"></i> <i class="fa fa-eye fa-1x"></i>
                            <source src="{{ asset( music.pathFile() ) }}" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                    <p>
                        {{ displayAdsName(music) }}
                    <p>
                </div>
            </div>
        </div>
        {% set prevAds = music.getMedias().getAds().getName()  %}
    {% endfor %}
{% endfor %}
