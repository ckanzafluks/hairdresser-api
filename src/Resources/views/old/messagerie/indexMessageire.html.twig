{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
    <div class="container-fluid" ">
        <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
        <div class="mail-box" style="height: 900px">
            <aside class="sm-side">

                <div class="user-head">
                    <a class="inbox-avatar" href="javascript:;">

                        <img  width="64" hieght="60" src="{% if userInfos.photo == null %}/homepage-child/images/mystery-man.jpg{% else %}{{ userInfos.photo }}ici{% endif %}">
                    </a>

                    <div class="user-name">
                        <h5><a href="#">{{userInfos.name}}</a></h5>
                        <span><a href="#">{{userInfos.email}}</a></span>
                    </div>
                </div>
                <div class="inbox-body">
                    <a href="#" id="formNewMessagerie" data-toggle="modal"  title="Compose"    class="btn btn-compose">
                        Nouveau message
                    </a>
                    <!-- Modal -->
                    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade" style="display: none;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                    <h4 class="modal-title">Compose</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Destinataire:</label>
                                            <div class="col-lg-10">
                                                <input type="text" placeholder="" id="inputEmail1" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                           <!-- <label class="col-lg-2 control-label">Cc / Bcc</label>
                                            <div class="col-lg-10">
                                                <input type="text" placeholder="" id="cc" class="form-control">
                                            </div>
                                            -->
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Objet:</label>
                                            <div class="col-lg-10">
                                                <input type="text" placeholder="" id="inputPassword1" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Message:</label>
                                            <div class="col-lg-10">
                                                <textarea rows="10" cols="30" class="form-control" id="" name=""></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                    <!--  <span class="btn green fileinput-button">
                                                        <i class="fa fa-plus fa fa-white"></i>
                                                        <span>Attachment</span>
                                                        <input type="file" name="files[]" multiple="">
                                                      </span> -->
                                                <button class="btn btn-send" type="submit">Send</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>

                <ul class="inbox-nav inbox-divider">
                    <li class="{% if filtre =='reception' %}active{% endif %}">
                        <a href="{{ path('messagerie',{'filtre': 'reception'}) }}"><i class="fa fa-inbox"></i> Boite Reception <span class="label label-danger pull-right">{% if messageNonLu == 0 %} {% elseif messageNonLu > 0 %}{{ messageNonLu }}{% endif %}</span></a>
                    </li>
                    <li class="{% if filtre =='sent' %}active{% endif %}">
                        <a href="{{ path('messagerie',{'filtre': 'sent'}) }}"><i class="fa fa-envelope-o"></i> Messages envoyés</a>
                    </li>
                    <li>
                        <a href="#"><i class=" fa fa-trash-o"></i> Trash</a>
                    </li>
                </ul>
            </aside>
            <aside class="lg-side">
                <div class="inbox-head">
                    <h3>Boite Reception</h3>
                    <form action="#" class="pull-right position">
                        <div class="input-append">
                            <input type="text" class="sr-input" placeholder="Search Mail">
                            <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
                <div class="inbox-body">
                    <div class="mail-option">
                        <div class="chk-all">
                            <input type="checkbox" class="mail-checkbox mail-group-checkbox">
                            <div class="btn-group">
                                <a data-toggle="dropdown" href="#" class="btn mini all" aria-expanded="false">
                                    All
                                    <i class="fa fa-angle-down "></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"> None</a></li>
                                    <li><a href="#"> Read</a></li>
                                    <li><a href="#"> Unread</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="btn-group">
                            <a onclick="refresh()" data-original-title="Refresh" data-placement="top" data-toggle="dropdown" href="#" class="btn mini tooltips">
                                <i class=" fa fa-refresh"></i>
                            </a>
                        </div>
                        <div class="btn-group hidden-phone">
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                            </ul>
                        </div>
                        {% if mailbox =='allMail' %}
                        <ul class="unstyled inbox-pagination">
                            <li><span>page: {{ page }}/ {{ maxPage }}</span></li>
                            {% if page <= 1  %}
                            {% else %}
                                <li>
                                    <a class="np-btn" href="{{ path('messagerie',{'filtre': filtre, 'page': page-1}) }}"><i class="fa fa-angle-left  pagination-left"></i></a>
                                </li>
                            {% endif %}
                            {% if page < maxPage %}
                            <li>
                                <a class="np-btn" href="{{ path('messagerie',{'filtre': filtre, 'page': page+1}) }}"><i class="fa fa-angle-right pagination-right"></i></a>
                            </li>
                            {% endif %}
                        </ul>
                        {% endif %}
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                        {% if mailbox =='allMail' %}
                            {% include 'messagerie/body/tablemailBox.html.twig' %}
                        {% elseif mailbox =='readMail' %}
                            {% include 'messagerie/body/readMail.html.twig' %}
                        {% endif %}

                </div>
            </aside>
        </div>
    </div>
    {% if mailbox =='readMail' %}
     {% include 'messagerie/form/formSendMessage.html.twig' %}
    {% endif %}
    {% include'messagerie/form/formNewMessage.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ absolute_url('/homepage/css/messagerie_2.css') }}" rel="stylesheet">
{% endblock %}

{% block customJavascripts %}
    <script src="{{ asset('homepage/js/listegroup.js') }}"></script>
    <script src="{{ asset('homepage/js/formModale.js') }}"></script>
    <script src="{{ asset('homepage/js/mailbox.js') }}"></script>

{% endblock %}