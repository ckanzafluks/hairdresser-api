

<!-- left menu section -->
<div class="col-xs-6 col-sm-9 order-sm-1">
    <div class="tab-content" id="">
        <div class="tab-pane fade show active pb-4" role="tabpanel" aria-labelledby="nav-home-tab">
            <!--left col-->
            <div class="row partMenu_detailAds">
                <div class="col-sm-12 border" style=" background-color: whitesmoke">
                    <div class="col-sm-6 offset-sm-4" style=" padding: 20px;">
                         <a href="{{ path("ads_detail", {id: currentAds.id, section:"media", filtre:"album"} )}}"><button  type="button" class="btn btn-primary btn-lg">Albums</button></a>
                         <a href="{{ path("ads_detail", {id: currentAds.id, section:"media", filtre:"video"} )}}"> <button  type="button" class="btn btn-primary btn-lg">Videos</button></a>
                         <a href="{{ path("ads_detail", {id: currentAds.id, section:"media", filtre:"son"} )}}"><button type="button" class="btn btn-primary btn-lg">Son</button></a>
                    	
                    </div>
                </div>
            </div>
            <div class="row partMenu_detailAds">
                <div class="col-sm-12 border">
                    <div class="row">
                   
                	{%  for medias in medias %}
                    	
                    	{% if filtre =="video" %}
                    	
                            <div class="col-sm-4">
                                <iframe width="300" height="200" src="{{ medias.uri }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        {% elseif filtre =="album"%}
                        
                        	<div class="card" style="width: 18rem;">
                                <a id= {{ medias.id }} href="#"><img  width="300" height="200" src="{{ medias.pathfile }}" onclick="zoomScreen(this)" class="card-img-top" alt="..."></a>
                            </div>
                            
                        {% elseif filtre =="son"%}
                        
                      	  	<div class="card" style="width: 18rem;">
                      	  		
                      	  		<img class="card-img-top" src="/img/logoSon.png" alt="Card image cap">
                      	  		<h3>{{ medias.originalName }}</h3>
                                <a href="#"><audio controls><source src="{{ medias.pathfile }}" type="audio/ogg"></audio> </a>
                                 
                            </div>
                            {% endif %}
                    {% endfor %}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content" id="">

    </div>
</div>