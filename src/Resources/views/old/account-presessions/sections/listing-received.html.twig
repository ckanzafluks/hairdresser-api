<table class="table table-hover mt-4">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Intitulé</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {% if preSessionsList|length <= 0 %}
        <tr>
            <td colspan="100" class="text-center">Aucune donnée trouvée</td>
        </tr>
    {% endif %}
    {% for preSession in preSessionsList %}
        <tr style="word-break: break-all;">
            <th scope="row">{{ preSession.getCreated().format("d-m-Y H:i") }}</th>
            <td>
                <i class="fal fa-arrow-circle-left fa-2x" ></i>
                {{ displayPressionType(preSession) }} de <strong>{{ preSession.getAuthor().getName() }}</strong> pour réaliser <strong>{{ preSession.getObjectif().getName() }}</strong></td>
            <td>
                <a title="Voir le détail" style="word-break: keep-all;" href="{{ path('pre-sessions.listing.detail', { 'id': preSession.getId(), 'type': app.request.get("type") }) }}">
                    <button class="btn bg-blue" type="button">
                        Voir
                    </button>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>