<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <i class="fas fa-align-justify"></i>
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Informations
                </button>
            </h2>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5 col-sm-12 col-lg-5">
                        <div class="wdgt-box lst-grp-wrp">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th><h4 class="text-center">Mentor</h4></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Pseudo</td>
                                        <td>{{ preSession.getObjectif().getUser() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Compétence</td>
                                        <td>{{ preSession.getObjectif().getName() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Description de la compétence</td>
                                        <td>{{ preSession.getObjectif().getDescription() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Envoyé le</td>
                                        <td>{{ preSession.getCreated().format('d-m-Y à H:i') }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-12 col-lg-1">
                        {% if ( preSession.getAuthor().getId() == app.user.getId() ) %}
                            <i class="fas fa-arrow-circle-right fa-2x"></i>
                        {% else %}
                            <i class="fas fa-arrow-circle-left fa-2x"></i>
                        {% endif %}
                    </div>
                    <div class="col-md-5 col-sm-12 col-lg-5">
                        <div class="wdgt-box lst-grp-wrp">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th><h4 class="text-center">Mentoré</h4></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Pseudo</td>
                                        <td>{{ preSession.getCompetence().getUser() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Objectif</td>
                                        <td>{{ preSession.getCompetence().getName() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Objectif du mentoré</td>
                                        <td>{{ preSession.getCompetence().getDescription() }}</td>
                                    </tr>
                                    <tr>
                                        <td>Reçu le</td>
                                        <td>{{ preSession.getCreated().format('d-m-Y à H:i') }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h2 class="mb-0">
                <i class="fas fa-align-justify"></i>
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Programme du Mentor
                </button>
            </h2>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">{{ preSession.getProgramme() }}</div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingFour">
            <h2 class="mb-0">
                <i class="fas fa-align-justify"></i>
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
                    Echanges sur la proposition <span class="badge badge-secondary"> {{ listMessages|length }}</span>
                </button>
            </h2>
        </div>
        <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
            <div class="card-body">

                <div class="chat">
                    <div class="card">
                        <div class="card-body msg_card_body">
                            {% for message in listMessages %}
                                {% if message.getAuthor().getId() == app.user.id  %}
                                    <div class="d-flex justify-content-start mb-4">
                                        <div class="img_cont_msg">
                                            <img class="rounded-circle img-responsive user_img_msg" src="{{ displayImage(message.getAuthor()) }}">
                                        </div>
                                        <div class="msg_cotainer">
                                            {{ message.getMessage() }}
                                            <span class="msg_time">{{ ago(message.getCreated()) }}</span>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="d-flex justify-content-end mb-4">
                                        <div class="msg_cotainer_send">
                                            {{ message.getMessage() }}
                                            <span class="msg_time_send">{{ ago(message.getCreated()) }}</span>
                                        </div>
                                        <div class="img_cont_msg">
                                            <img class="rounded-circle img-responsive user_img_msg" src="{{ displayImage(message.getAuthor()) }}">
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        {{ form_start(formPreSessionMessage) }}

                            <div class="row">
                                <div class="col-sm">
                                    {{
                                        form_row(formPreSessionMessage.message,{
                                            'attr': {'class': 'form-control type_msg'}
                                        }
                                    )}}
                                </div>
                                <div class="col-sm d-flex justify-content-start row">
                                    <button type="submit" class="btn btn-default btn-submit"><i class="fas fa-location-arrow"></i></button>
                                </div>
                            </div>

                        {{ form_end(formPreSessionMessage) }}
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

