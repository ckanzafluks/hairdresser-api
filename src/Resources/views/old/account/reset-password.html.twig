{% extends 'base.dashbord.register.html.twig' %}

{% block titleform %}Changement du mot de passe{% endblock %}
{% block metadescription %}{% endblock %}


{% block formulaire %}
    <div class="p-3 form-registrer">
        {{ form_start(changePasswordForm) }}
        <div class="form-group row">
            <div class="col-12">
                {{ form_row(changePasswordForm.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            {{form_widget(changePasswordForm._token)}}
        </div>
        <div class="form-group text-center row m-t-20">
            <div class="col-12">
                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Valider</button>
            </div>
        </div>
    </div>
{% endblock %}